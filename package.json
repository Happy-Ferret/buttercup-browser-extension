{
  "name": "buttercup-chrome",
  "version": "0.3.0",
  "description": "Buttercup extension for Chrome.",
  "main": "source/background/index.js",
  "scripts": {
    "build": "npm run clean && npm run copy && npm run webpack",
    "clean": "rimraf ./dist/**/*",
    "copy": "npm run copy:setup && npm run copy:tab && npm run copy:buttercup && npm run copy:manifest && npm run copy:resources",
    "copy:dev": "npm run copy:setup && npm run copy:tab && npm run copy:buttercup:dev && npm run copy:manifest && npm run copy:resources",
    "copy:buttercup": "cp ./node_modules/buttercup-web/build/buttercup.min.js dist/ && mvf dist/buttercup.min.js dist/buttercup.js",
    "copy:buttercup:dev": "cp ./node_modules/buttercup-web/build/buttercup.js dist/",
    "copy:manifest": "cp ./manifest.json dist/",
    "copy:resources": "cp -r ./resources dist/",
    "copy:setup": "cp ./source/setup/index.html dist/setup.html",
    "copy:tab": "cp ./source/popup/index.html dist/popup.html",
    "dev": "npm run clean && concurrently --raw 'npm run watch:html' 'npm run webpack -- --watch'",
    "test": "npm run test:lint",
    "test:lint": "node node_modules/eslint/bin/eslint.js source/",
    "watch:html": "watch-run 'npm run copy:dev' -p source/setup/*.html,source/popup/*.html,node_modules/buttercup-web/build/*.js -i -s",
    "webpack": "webpack --progress"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/perry-mitchell/buttercup-chrome.git"
  },
  "keywords": [
    "buttercup",
    "password",
    "vault",
    "login",
    "secure"
  ],
  "author": "Perry Mitchell <perry@perrymitchell.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/perry-mitchell/buttercup-chrome/issues"
  },
  "homepage": "https://github.com/perry-mitchell/buttercup-chrome#readme",
  "dependencies": {
    "babel-core": "^6.4.5",
    "babel-loader": "^6.2.2",
    "babel-plugin-transform-object-rest-spread": "^6.19.0",
    "babel-plugin-transform-react-jsx": "^6.5.2",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "buttercup-web": "~0.14.1",
    "concurrently": "^3.1.0",
    "cpx": "^1.5.0",
    "css-loader": "^0.26.1",
    "dropbox": "^2.5.0",
    "events": "~1.1.1",
    "history": "^4.3.0",
    "jsx-loader": "^0.13.2",
    "lockr": "^0.8.4",
    "movefiles": "^1.0.1",
    "node-sass": "^3.13.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-router": "~2.8.1",
    "redom": "~1.7.0",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "watch-run": "^1.2.4",
    "webpack": "^1.13.2"
  },
  "devDependencies": {
    "eslint": "^3.12.2"
  }
}
