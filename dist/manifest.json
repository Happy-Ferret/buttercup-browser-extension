{
	"manifest_version": 2,

	"name": "Buttercup",
	"description": "Browser extension for Buttercup",
	"version": "0.8.0",

	"browser_action": {
		"default_icon": "resources/buttercup-256.png",
		"default_popup": "popup.html#/"
	},

	"icons": {
        "256": "resources/buttercup-256.png",
		"128": "resources/buttercup-128.png",
		"48": "resources/buttercup-48.png"
	},

	"background": {
		"scripts": [
            "buttercup.js",
			"background.js"
		]
	},

	"content_scripts" : [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["tab.js"]
		}
	],

	"permissions": [
		"activeTab",
		"tabs",
		"<all_urls>",
		"notifications"
	]

}
