{
	"manifest_version": 2,

	"name": "Buttercup",
	"description": "Chrome Extension for Buttercup",
	"version": "0.1.1",

	"browser_action": {
		"default_icon": "assets/buttercup-128.png",
		"default_popup": "plugin/popup.html"
	},

	"icons": {
		"128": "assets/buttercup-128.png",
		"48": "assets/buttercup-48.png"
	},
  
	"background": {
		"scripts": [
			"dist/background.js"
		]
	},
	
	"content_scripts" : [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["dist/tab.js"]
		}
	],
  
	"permissions": [
		"activeTab",
		"tabs",
		"<all_urls>",
		"notifications"
	]
  
}
